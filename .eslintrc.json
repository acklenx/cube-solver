{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "env": {
    "jest": true
  },
  "rules": {
    "no-bitwise": "off",
    "no-mixed-operators": "off",
    "no-param-reassign": "off",
    "class-methods-use-this": ["error", { "exceptMethods": ["handleSolution"] }],
    "import/no-named-as-default": "off",
    "max-len": ["error", 125],
    "object-curly-newline": "off"
  }
}