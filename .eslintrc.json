{
    "extends": "airbnb-base",

    "plugins": [
        "import",
        "jest"
    ],

    "env": {
      "jest": true
    },

    "rules": {
      "no-bitwise": "off",
      "no-mixed-operators": "off",
      "no-param-reassign": "off",
      "class-methods-use-this": ["error", { "exceptMethods": ["handleSolution"] }]
    }
}
